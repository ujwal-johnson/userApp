<section class="vh-100 d-flex justify-content-center align-items-center" style="background-color: #508bfc;">
    <div class="container py-5">
      <div class="row">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
          <div class="card shadow-2-strong text-center" style="border-radius: 1rem; background-color: white;">
            <div class="card-body p-5" style="align-items: center;">
              <h1>Edit User</h1>
              <form action="" method="post">
                <div class="form-outline mb-4">
                  <input type="text" name="name" required class="form-control form-control-lg" placeholder="Enter name" value="<%= user.name %>" />
                </div>
                <div class="form-outline mb-4">
                  <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter Email" value="<%= user.email %>" />
                </div>
                <div class="form-outline mb-4">
                  <input type="text" name="mno" class="form-control form-control-lg" placeholder="Enter Mobile" value="<%= user.mobile %>" />
                </div>
                <div class="form-check mb-4">
                  <input type="radio" name="verify" value="1" <% if (user.is_verified == 1) { %> checked <% } %>>
                  <label>Verified</label>
                </div>
                <div class="form-check mb-4">
                  <input type="radio" name="verify" value="0" <% if (user.is_verified == 0) { %> checked <% } %>>
                  <label>Unverified</label>
                </div>
                <input type="hidden" name="id" value="<%= user._id %>">
                <button class="btn btn-lg btn-block" type="submit" style="background-color: black; color: white; font-weight: bold;">Update User</button>
              </form>
              <br>
              <a href="/admin/dashboard">Go DashBoard</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  

